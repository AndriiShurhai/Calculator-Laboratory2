<Window x:Class="CalculatorProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="buttonToggleAdvance" Content=">>" Grid.Row="0" Grid.Column="0"
                Margin="3" FontSize="18" Width="30" Height="30" HorizontalAlignment="Left" Click="ToggleAdvancedPanel_Click"/>

        <Button x:Name="buttonRedo" Content="⟳" Grid.Row="0" Grid.Column="1" Margin="3" FontSize="18" Width="30" Height="30" HorizontalAlignment="Right"/>

        <TextBox x:Name="txtDisplay" Grid.Row="1" Height="50" Margin="10"
                 FontSize="24" TextAlignment="Right" IsReadOnly="True"
                 VerticalContentAlignment="Center"/>

        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto" x:Name="AdvancedColumnDefinition"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button x:Name="buttonCE" Content="CE" Grid.Row="0" Grid.Column="0" Margin="2" FontSize="18"/>
            <Button x:Name="buttonC" Content="C" Grid.Row="0" Grid.Column="1" Margin="2" FontSize="18" Click="ClearButton_Click"/>

            <Button x:Name="button7" Content="7" Grid.Row="1" Grid.Column="0" Margin="2" FontSize="18" Click="NumberButton_Click"/>
            <Button x:Name="button8" Content="8" Grid.Row="1" Grid.Column="1" Margin="2" FontSize="18" Click="NumberButton_Click"/>
            <Button x:Name="button9" Content="9" Grid.Row="1" Grid.Column="2" Margin="2" FontSize="18" Click="NumberButton_Click"/>
            <Button x:Name="button_Backspace" Content="⌫" Grid.Row="0" Grid.Column="2" Margin="2" FontSize="18" Click="EraseSymbol_Click"/>
            <Button x:Name="buttonDivide" Content="/" Tag="/" Grid.Row="0" Grid.Column="3" Margin="2" FontSize="18" Click="OperationButton_Click"/>

            <Button x:Name="button6" Content="4" Grid.Row="2" Grid.Column="0" Margin="2" FontSize="18" Click="NumberButton_Click"/>
            <Button x:Name="button5" Content="5" Grid.Row="2" Grid.Column="1" Margin="2" FontSize="18" Click="NumberButton_Click"/>
            <Button x:Name="button4" Content="6" Grid.Row="2" Grid.Column="2" Margin="2" FontSize="18" Click="NumberButton_Click"/>
            <Button x:Name="buttonMultiply" Content="×" Tag="*" Grid.Row="1" Grid.Column="3" Margin="2" FontSize="18" Click="OperationButton_Click"/>

            <Button x:Name="button3" Content="1" Grid.Row="3" Grid.Column="0" Margin="2" FontSize="18" Click="NumberButton_Click"/>
            <Button x:Name="button2" Content="2" Grid.Row="3" Grid.Column="1" Margin="2" FontSize="18" Click="NumberButton_Click"/>
            <Button x:Name="button1" Content="3" Grid.Row="3" Grid.Column="2" Margin="2" FontSize="18" Click="NumberButton_Click"/>
            <Button x:Name="buttonMinus" Content="-" Tag="-" Grid.Row="2" Grid.Column="3" Margin="2" FontSize="18" Click="MinusButton_Click"/>

            <Button x:Name="buttonDoubleZero" Content="00" Grid.Row="4" Grid.Column="0" Margin="2" FontSize="18" Click="NumberButton_Click"/>
            <Button x:Name="button0" Content="0" Grid.Row="4" Grid.Column="1" Margin="2" FontSize="18" Click="NumberButton_Click"/>
            <Button x:Name="buttonDecimal" Content="." Grid.Row="4" Grid.Column="2" Margin="2" FontSize="18" Click="DecimalButton_Click"/>
            <Button x:Name="buttonEquals" Content="=" Grid.Row="4" Grid.Column="3" Margin="2" FontSize="18" Click="EqualsButton_Click"/>
            <Button x:Name="buttonPlus" Content="+" Tag="+" Grid.Row="3" Grid.Column="3" Margin="2" FontSize="18" Click="OperationButton_Click"/>

            <Grid x:Name="AdvancedPanel" Grid.Row="0" Grid.Column="4" Grid.RowSpan="5" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button x:Name="buttonSqrt" Content="sqrt" Grid.Row="0" Margin="2" FontSize="18"/>
                <Button x:Name="buttonPower" Content="pow" Grid.Row="1" Margin="2" FontSize="18"/>
                <Button x:Name="buttonLog" Content="log" Grid.Row="2" Margin="2" FontSize="18"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
